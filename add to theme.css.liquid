/* CSS for the popup overlay */
.popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

/* CSS for the popup content */
.popup-content {
  background: white;
  padding: 40px; /* Increase padding */
  border-radius: 5px;
  text-align: center;
  width: 80%; /* Increase width */
  max-width: 500px; /* Set a maximum width */
}

@media (max-width: 600px) {
  .popup-content {
    width: 90%; /* Adjust width for smaller screens */
    padding: 20px; /* Reduce padding for smaller screens */
  }
}

.popup-flag {
  width: 50px; /* Adjust the size of the flag */
  margin-bottom: 20px; /* Add some margin below the flag */
}

.popup-button {
  margin-top: 10px;
  padding: 10px 20px;
  background: #007bff;
  color: white;
  border: none;
  border-radius: 3px;
  cursor: pointer;
}

.popup-button:hover {
  background: #0056b3;
}
